{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "react-map-gl": [
        "node_modules/react-map-gl/dist/esm/index.js"
      ],
      "mapbox-gl": [
        "node_modules/mapbox-gl/dist/mapbox-gl.js"
      ]
    },
    "types": [
      "node",
      "react",
      "react-dom",
      "mapbox-gl"
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "supabase/functions/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}